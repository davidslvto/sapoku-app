<!doctype html>
<html lang="en" class="no-js">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>Sapoku &mdash; Codebits</title>
        <meta name="description" content="">
		<meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0; user-scalable=0;">
		<meta name="HandheldFriendly" content="True">
		<meta name="MobileOptimized" content="320">

		<!-- Stylesheets -->
		<link rel="stylesheet" href="http://css.ink.sapo.pt/v1/css/ink.css">
		<!-- Js -->
		<script type="text/javascript" src="http://js.sapo.pt/Bundles/Ink-v1.js"></script>
		<!--[if IE]>
			<link rel="stylesheet" href="http://css.ink.sapo.pt/v1/css/ink-ie.css" type="text/css" media="screen" title="no title" charset="utf-8">
		<![endif]-->
		<%= stylesheet_link_tag "application", :media => "all" %>

		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
		<%= yield :header %>
	</head>
	<body>
		<div id="mainwrap" class="ink-container">
			<% if flash.notice %><div class="ink-alert success"><button class="ink-close">&times;</button><p><%= flash.notice %></p></div><% end %>
			<% if flash.alert %><div class="ink-alert error"><button class="ink-close">&times;</button><p><%= flash.alert %></p></div><% end %>
			<nav class="ink-navigation ink-l100 mb">
					<ul class="menu horizontal black">
						<li class="ink-title"><%= link_to 'SapoKu', apps_path %></li>
					<% if user_signed_in? %>
						<li class="right"><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
						<li class="right"><%= link_to('Create App', new_app_path ) %></li>
						<% else %>
						<li class="right"><%= link_to('Login', new_user_session_path)  %></li>
						<% end %>
					</ul>
				</nav>
			<div class="ink-l100 ink-s100">
      			<%= yield %>
   			</div>
		</div>
    <footer>
      <div class="ink-container">
        <p class="copyright">
          &copy; 2012 Sapoku &mdash; Codebits IV - Built with <i class="icon-heart icon-small"></i> by <a href="http://webreakstuff.com">Webreakstuff</a> &amp; <a href="http://biasedbit.com">Biasedbit</a>
        </p>
      </div>
    </footer>
	</body>
</html>
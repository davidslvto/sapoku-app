<% if @app.is_bootstrap_done? %>

<div class="ink-l100 mb center">
	<h2><i class="icon-cloud icon-large"></i> <%= @app.name %>: Application details <% if !Tadpole.find(@app.name).running? %><span class="ink-label caution">Down<span><% else %><span class="ink-label success">Running<span><% end %></h2>
</div>

<div class="row ink-vspace">
	<div class="ink-l100 center">
		<h4>Configure your git repo</h4>
		<code>$><mark>git remote add sapoku git@sapoku.webreakstuff.com:<%=@app.name%>.git</mark></code>
		<p><em>you need to already have a git repo for the app.</em></p>
	</div>
</div>

<p><%= link_to "Delete application", @app, :method => :delete, :confirm => 'Are you really sure? There is no turning back!', :class => "ink-button caution" %> </p>

<% else %>
	<%= content_for :header do %>
		<meta http-equiv="refresh" content="3"/>
	<% end %>
	<div class="ink-alert ink-vspace"><p>Our ninjas are working hard to summon your app to life. Please wait a few moments longer!</p></div>
<% end %>